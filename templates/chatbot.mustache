<div id="chatbot"
    class="hidden right-20 bottom-24 z-50 fixed flex-col bg-white shadow-md rounded-lg w-80 h-96 overflow-hidden">
    <div id="chatbot-header" class="flex justify-between items-center bg-blue-600 p-3 text-white">
        <span>{{title}}</span>
        <span id="close-chatbot" class="cursor-pointer">&times;</span>
    </div>

    <div id="chatbot-body" class="flex flex-col px-2 py-4 overflow-y-auto grow" loading-text="{{loading_text}}">
    </div>

    <div id="chatbot-footer" class="flex p-2 border-t border-black">
        <input type="text" id="prompt-input" class="mr-2 p-2 border border-black rounded-lg grow"
            placeholder="{{prompt_placeholder}}">
        <button id="send-btn" class="bg-blue-600 hover:bg-blue-500 px-2 rounded-lg text-white cursor-pointer">{{send_button}}</button>
    </div>
</div>